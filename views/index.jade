extends layout



block title
    title cabdybox

  block content
    script(src="/socket.io/socket.io.js")
    script(src="/js/sample.js")
    header.navbar-fixed-top
      .container
        .header-wrapper
          .logo-area
            | CandyBox
          .header-button-box
            button.btn.btn-default#history
              span.glyphicon.glyphicon-heart
            button.btn.btn-default#request
              span.glyphicon.glyphicon-envelope
    .request-message#requestDiv
      .container
        form
          .form-group
            label(for="requestForm") Your Requesting Song 
            input.form-control(type="text" id="requestForm" placeholder="Song / Artist")
          button.btn.btn-default#goRequest.requestBtn(value="send") Request

    .liked-history#historyDiv
      .container
        table(boder="1")
          tr
            th Song
            th Artist
          tbody#list
        btn.btn.btn-danger#deleteHistory(type="button") Clear History
          
          

    section.art-work
      .art-work-wrapper
        .text-center.container-400
          img(src="/images/nowplaying.jpg")
    
    section.song-data
      .container.text-center
        #songTitle
          | Song title will be here
        #artistName
          | Artist's name will be here
          
    section
      .container
        .btn-box.text-center
          .row
            ul.judge-button-box
              li.like-button.judge-button
                btn#likeButton.btn.btn-primary(type="button" data-judge="1")
                  span.glyphicon.glyphicon-thumbs-up
              li.dislike-button.judge-button
                btn#disButton.btn.btn-danger(type="button" data-judge="1")
                  span.glyphicon.glyphicon-thumbs-down
